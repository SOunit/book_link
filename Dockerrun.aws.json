{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "hiranokuosaka/book_link_client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "api",
      "image": "hiranokuosaka/book_link_api",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "hiranokuosaka/book_link_nginx",
      "hostname": "nginx",
      "essential": true,
      "portMapping": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["client", "api"]
    }
  ]
}
